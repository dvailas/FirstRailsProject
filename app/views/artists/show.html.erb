<header>
  <div class="topnav">
    <a class="active" href="/welcome">Home</a>
    <a href="/about">About</a>
    <a href="/search">Search</a>
    <a href="/collection">Collection</a>
  </div>

  <form action="/result" method="get">
    <label>Search:</label>
    <input type="text" id="keyword" name="keyword" />
    <input name="commit" type="submit" value="Search" />
  </form>
</header>
<h1><%= @artist.name %></h1>
<h4>Genre:<%= @artist.genre.name %></h4>
<h4>Rating:<%= @artist.popularity %></h4>
<h5>Top 5 Songs</h5>
<ul>
  <% @songs_top_5.each do |song|%>
    <li>
      <%= song.name %> Rating: <%= song.rating%>
    </li>
  <% end %>
</ul>
<h5>Albums</h5>
<ul>
  <% @albums.each do |album|%>
    <li><%= album.name %> <%= link_to 'Show', album_path(album) %></li>
  <% end %>
</ul>

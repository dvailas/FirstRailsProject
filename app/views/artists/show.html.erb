<h1><%= @artist.name %></h1>
<% if(@artist.image != nil)%>
  <img src="assets/<%=@artist.image %>" alt="Band Picture" height="80" width="80">
<%end%>
<h4>Genre:<%= @artist.genre.name %></h4>
<h4>Rating:<%= @artist.popularity %></h4>
<h5>Top 5 Songs</h5>
<ul>
  <% @songs_top_5.each do |song|%>
    <li>
      <%= song.name %> Rating: <%= song.rating%>
    </li>
  <% end %>
</ul>
<h5>Albums</h5>
<ul>
  <% @albums.each do |album|%>
    <li><%= album.name %> <%= link_to 'Show', album_path(album) %></li>
  <% end %>
</ul>
<p>href:
  <% if(@artist.href == nil)%>
  N/A
  <%else %>
  <%=@artist.href%>
  <%end%>
</p>
